<Window x:Class="Kanban.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban"
        mc:Ignorable="d"
        Title="Kanban-Login" SizeToContent="WidthAndHeight">
    <Grid Width="150" Height="200">
        <TextBlock Margin="0,0,50,180">Choose project:</TextBlock>
        <TextBlock Margin="0,50,50,130">Username:</TextBlock>
        <TextBlock Margin="0,100,50,80">Password:</TextBlock>
        <TextBlock Name="AlertTxt" FontSize="8" Foreground="Red" Margin="10,145,40,45" Visibility="Hidden">Incorrect characters</TextBlock>
        <ComboBox Name="ProjCmbBox" Margin="0,25,30,155" SelectedIndex="0">
            <ComboBoxItem>New project</ComboBoxItem>
        </ComboBox>
        <TextBox Name="LoginTxtBox" Margin="0,70,30,110">admin</TextBox>
        <TextBox Name="PasswordTxtBox" Margin="0,120,30,60">admin</TextBox>
        <Button Name="BtnLogin" Margin="10,160,80,10" Click="BtnLogin_Click">Login</Button>
        <Button Name="BtnExit" Margin="80,160,10,10" Click="BtnExit_Click">Exit</Button>
    </Grid>
</Window>
