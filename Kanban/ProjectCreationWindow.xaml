<Window x:Class="Kanban.ProjectCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban"
        mc:Ignorable="d"
        Title="ProjectCreationWindow" SizeToContent="WidthAndHeight">
    <Grid Width="200" Height="300">
        <TextBlock Margin="5,10,110,270">Project name:</TextBlock>
        <TextBlock Margin="5,40,110,240">Database name:</TextBlock>
        <CheckBox Margin="5,60,110,220" Name="AutoChkBox" FontSize="10" Checked="AutoChkBox_Checked">Automatic:</CheckBox>
        <TextBlock Margin="5,80,80,200">Project description:</TextBlock>
        <TextBox Name="ProjTextBox" Margin="90,10,10,270"></TextBox>
        <TextBox Name="DbTextBox" Margin="90,40,10,240"></TextBox>
        <TextBox Name="ProjDescBox" Margin="5,100,5,40"></TextBox>
        <Button Name="BtnCreate" Margin="10,270,120,10" Click="BtnCreate_Click">Create</Button>
        <Button Name="BtnCancel" Margin="120,270,10,10" Click="BtnCancel_Click">Cancel</Button>
    </Grid>
</Window>
